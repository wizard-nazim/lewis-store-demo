  "components": {
    "schemas": {
      "CreateOrderDto": {
        "type": "object",
        "properties": {
          "deliveryFee": {
            "type": "number",
            "format": "double"
          },
          "tax": {
            "type": "number",
            "format": "double"
          },
          "paymentType": {
            "type": "string",
            "nullable": true
          },
          "items": {
            "type": "array",
